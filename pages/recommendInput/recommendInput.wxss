/* pages/recommendInput/recommendInput.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f8fa; /* 页面背景色 */
  min-height: 100vh;
}

/* 让 Cell Group 有上下间距 */
.van-cell-group--inset {
  margin: 20rpx 0;
}

/* 复选框组垂直排列，增加间距 */
.subject-checkbox-group {
  padding: 10rpx 30rpx; /* 内边距 */
}
.subject-checkbox-group .van-checkbox--vertical {
  margin-bottom: 20rpx; /* 增加垂直间距 */
}
.subject-checkbox-group .van-checkbox:last-child {
  margin-bottom: 0;
}

/* 提交按钮容器，增加上边距 */
.submit-btn-container {
  margin-top: 60rpx;
  padding: 0 20rpx; /* 按钮左右留点空隙 */
}